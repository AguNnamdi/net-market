.wrap#create_header
  %header.single-header
    %h1.logo-user__registration
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?110229100", alt:"mercari", height: "49", width: "185"
%br
.single-container
  %main.single-main
    .l-single-container
      %h2.l-single-head
        会員情報入力
      .l-single-inner
        .l-single-content
          = form_for(resource, as: resource_name, url: '/jp/signup/registration') do |f|
            = devise_error_messages!
            .form-group.first
              = f.label :ニックネーム
              %span.form-repuire 必須
              = f.text_field :nickname, autocomplete: "nickname", placeholder: "例) メルカリ太郎", class: "input-default", autofocus: true
            .form-group
              = f.label :メールアドレス
              %span.form-repuire 必須
              = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default"
            .form-group
              = f.label :パスワード
              %span.form-repuire 必須
              - if @minimum_password_length
                = f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", class: "input-default"
            .form-group
              = f.label "パスワード(確認)"
              %span.form-repuire 必須
              - if @minimum_password_length
                = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", class: "input-default"
            .form-group
              %label 本人確認
            安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
            .form-group
              = f.label "姓(全角)"
              %span.form-repuire 必須
              = f.text_field :first_name, autocomplete: "first_name", placeholder: "例) 山田", class: "input-default"
            .form-group
              = f.label "名(全角)"
              %span.form-repuire 必須
              = f.text_field :last_name, autocomplete: "last_name", placeholder: "例) 彩", class: "input-default"
            .form-group
              = f.label "姓カナ(全角)"
              %span.form-repuire 必須
              = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "例) ヤマダ", class: "input-default"
            .form-group
              = f.label "名カナ(全角)"
              %span.form-repuire 必須
              = f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "例) アヤ", class: "input-default"
            .form-group
              = f.label :生年月日
              %span.form-repuire 必須
              %br
              = f.select :birth_year, 1930..2010, {prompt: "--"}, {class: "input-default__birth"}
              &nbsp;年
              %br
              = f.select :birth_month, 1..12, {prompt: "--"}, {class: "input-default__birth month"}
              &nbsp;月
              %br
              = f.select :birth_day, 1..31, {prompt: "--"}, {class: "input-default__birth day"}
              &nbsp;日
            %br
            = recaptcha_tags
            %br
            「次へ進む」のボタンを押すことにより、
            = link_to '利用規約', 'https://www.mercari.com/jp/tos_list/'
            に同意したものとみなします
            .actions
              = f.submit "次に進む", class: "recaptcha btn-default btn-red"

= render partial: "devise/shared/users_footer"
