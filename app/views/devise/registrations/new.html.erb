<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "姓" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, "名" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "姓(カナ)" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "名(カナ)" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code, "都道府県" %><br />
    <%= f.number_field :prefecture_code %>
  </div>

  <div class="field">
    <%= f.label :zip, "郵便番号" %><br />
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :city_name, "市町村区" %><br />
    <%= f.text_field :city_name %>
  </div>

  <div class="field">
    <%= f.label :street, "建物名、マンションなど" %><br />
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :birth_year, "誕生年" %><br />
    <%= f.number_field :birth_year %>
  </div>

  <div class="field">
    <%= f.label :birth_month, "誕生月" %><br />
    <%= f.number_field :birth_month %>
  </div>

  <div class="field">
    <%= f.label :birth_day, "誕生日" %><br />
    <%= f.text_field :birth_day %>
  </div>

  <div class="field">
    <%= f.label :tel, "電話番号" %><br />
    <%= f.text_field :tel %>
  </div>

  <div class="field">
    <%= f.label :self_introduce, "自己紹介" %><br />
    <%= f.text_field :self_introduce %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
