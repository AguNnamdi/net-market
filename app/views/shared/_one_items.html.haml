%section.items-box
  = link_to item_path(item) do
    %figure.items-box-photo
      = image_tag (item.item_images.first.image.url), class: 'is-higher-height lazyload'
    .items-box-body
      %h3.items-box-name.font-2
        = item.name
      .items-box-num.clearfix
        .items-box-price.font-5
          = number_to_currency(item.price, unit: "¥ ", precision:0, format: "%u%n")
        .items-box-likes.font-2
          %i.icon-like-border
        %p.item-box-tax (税込)
